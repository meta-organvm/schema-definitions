{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://meta-organvm.github.io/schema-definitions/registry-v2.schema.json",
  "title": "Registry v2",
  "description": "Schema for registry-v2.json â€” the single source of truth for all repo state in the eight-organ system.",
  "type": "object",
  "required": ["version", "schema_version", "organs"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Registry format version",
      "const": "2.0"
    },
    "schema_version": {
      "type": "string",
      "description": "Schema version within the 2.x line"
    },
    "schema_note": { "type": "string" },
    "deployment_model": { "type": "string" },
    "launch_date": {
      "type": "string",
      "format": "date"
    },
    "launch_date_note": { "type": "string" },
    "generated": {
      "type": "string",
      "format": "date-time"
    },
    "source": { "type": "string" },
    "project_status": { "type": "string" },
    "summary": { "$ref": "#/$defs/summary" },
    "meta_system_portfolio_note": { "type": "object" },
    "organs": {
      "type": "object",
      "patternProperties": {
        "^(ORGAN-[IVX]+|META-ORGANVM)$": { "$ref": "#/$defs/organ" }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "summary": {
      "type": "object",
      "properties": {
        "total_repos": { "type": "integer", "minimum": 0 },
        "total_repos_note": { "type": "string" },
        "operational_organs": { "type": "integer", "minimum": 0, "maximum": 8 },
        "completion_at_launch": { "type": "string" },
        "total_organizations": { "type": "integer" },
        "local_repos_to_migrate": { "type": "integer" },
        "portfolio_strength": { "type": "string" }
      }
    },
    "organ": {
      "type": "object",
      "required": ["name", "repositories"],
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "launch_status": {
          "type": "string",
          "enum": ["OPERATIONAL", "LOCKED", "PENDING"]
        },
        "completion": { "type": "string" },
        "public_visibility": {
          "type": "string",
          "enum": ["PUBLIC", "PRIVATE", "MIXED"]
        },
        "portfolio_angle": { "type": "string" },
        "repository_count": { "type": "integer", "minimum": 0 },
        "repositories": {
          "type": "array",
          "items": { "$ref": "#/$defs/repository" }
        }
      }
    },
    "repository": {
      "type": "object",
      "required": ["name", "org", "implementation_status", "public", "description"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9._-]+$"
        },
        "org": {
          "type": "string",
          "pattern": "^(organvm-[ivx]+-[a-z]+|meta-organvm)$"
        },
        "status": { "type": "string" },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "public": { "type": "boolean" },
        "description": {
          "type": "string",
          "minLength": 5
        },
        "documentation_status": { "type": "string" },
        "portfolio_relevance": { "type": "string" },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9._-]+/[a-zA-Z0-9._-]+$"
          }
        },
        "promotion_status": {
          "type": "string",
          "enum": ["LOCAL", "CANDIDATE", "PUBLIC_PROCESS", "GRADUATED", "ARCHIVED"]
        },
        "tier": {
          "type": "string",
          "enum": ["flagship", "standard", "stub", "archive", "infrastructure"]
        },
        "last_validated": {
          "type": "string",
          "format": "date"
        },
        "note": { "type": "string" },
        "implementation_status": {
          "type": "string",
          "enum": ["ACTIVE", "PROTOTYPE", "SKELETON", "DESIGN_ONLY", "ARCHIVED"]
        },
        "ci_workflow": {
          "type": ["string", "null"],
          "enum": ["ci-python.yml", "ci-typescript.yml", "ci-mixed.yml", "ci-minimal.yml", null]
        },
        "platinum_status": { "type": "boolean" },
        "promotion_obligations": {
          "type": "array",
          "items": { "$ref": "#/$defs/promotion_obligation" }
        },
        "type": { "type": "string" },
        "revenue_model": {
          "type": "string",
          "enum": ["subscription", "freemium", "one-time", "advertising", "marketplace", "internal", "none"]
        },
        "revenue_status": {
          "type": "string",
          "enum": ["pre-launch", "beta", "live", "deprecated", "n/a"]
        }
      }
    },
    "promotion_obligation": {
      "type": "object",
      "required": ["type", "target_org", "target_name", "description", "status"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["repo_creation", "essay"]
        },
        "target_org": { "type": "string" },
        "target_name": { "type": "string" },
        "description": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["PENDING", "FULFILLED", "CANCELLED"]
        }
      }
    }
  }
}
